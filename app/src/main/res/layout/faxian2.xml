<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="@drawable/mycolor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="15px"
            android:text="发现"
            android:textColor="#ffffff"
            android:textSize="38px"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:layout_marginTop="20px"
        android:background="#fdfdfe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fdfdfe"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="51px"
                    android:layout_marginLeft="80px"
                    android:layout_marginTop="51px"
                    android:src="@drawable/pingtaijieshao" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="60px"
                    android:text="平台介绍"
                    android:textColor="#333333"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="51px"
                    android:layout_marginLeft="80px"
                    android:layout_marginTop="51px"
                    android:src="@drawable/anquan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="60px"
                    android:text="安全保障"
                    android:textColor="#333333"
                    android:textSize="30px" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadada"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fdfdfe"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="51px"
                    android:layout_marginLeft="80px"
                    android:layout_marginTop="51px"
                    android:src="@drawable/xinxipilu"
                    tools:ignore="PxUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="60px"
                    android:text="信息披露"
                    android:textColor="#333333"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="51px"
                    android:layout_marginLeft="80px"
                    android:layout_marginTop="51px"
                    android:src="@drawable/wangdaiketang" />
 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="60px"
                    android:text="网贷课堂"
                    android:textColor="#333333"
                    android:textSize="30px"
                    tools:ignore="PxUsage" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="254px"
        android:background="#586e58">

    </com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="412px"
        android:layout_marginTop="18px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/jifenline"
            android:layout_width="match_parent"
            android:layout_height="92px"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:src="@drawable/jifenduihuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="积分兑换"
                android:textColor="#333333"
                android:textSize="30px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="right"
                android:paddingTop="38px"
                android:text="更多 >"
                android:textColor="#999999"
                android:textSize="24px"
                tools:ignore="PxUsage" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fdfdfe"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:background="#fdfdfe"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="260px"
                        android:layout_height="200px"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:background="#f5f5f5"
                        android:paddingBottom="20px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="20px"
                        android:src="@drawable/xianjinquan"
                        tools:ignore="PxUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="现金劵"
                        android:textColor="#333333"
                        android:textSize="30px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99"
                            android:textColor="#fe6632"
                            android:textSize="30px"
                            tools:ignore="PxUsage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亿金币"
                            android:textColor="#999999"
                            android:textSize="30px"
                            tools:ignore="PxUsage" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:background="#fdfdfe"
                    android:orientation="vertical"

                    tools:ignore="PxUsage">

                    <ImageView
                        android:layout_width="260px"
                        android:layout_height="200px"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:background="#f5f5f5"
                        android:paddingBottom="20px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="20px"
                        android:src="@drawable/xiaomi"
                        tools:ignore="PxUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="小米手环"
                        android:textColor="#333333"
                        android:textSize="30px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textColor="#fe6632"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亿金币"
                            android:textColor="#999999"
                            android:textSize="30px" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:background="#fdfdfe"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="260px"
                        android:layout_height="200px"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:background="#f5f5f5"
                        android:paddingBottom="20px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="20px"
                        android:src="@drawable/jiaxiquan"
                        tools:ignore="PxUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="加息劵"
                        android:textColor="#333333"
                        android:textSize="30px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99"
                            android:textColor="#fe6632"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亿金币"
                            android:textColor="#999999"
                            android:textSize="30px" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:background="#fdfdfe"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="260px"
                        android:layout_height="200px"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:background="#f5f5f5"
                        android:paddingBottom="20px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="20px"
                        android:src="@drawable/pangxie"
                        tools:ignore="PxUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="螃蟹劵"
                        android:textColor="#333333"
                        android:textSize="30px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="#fe6632"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亿金币"
                            android:textColor="#999999"
                            android:textSize="30px" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>