<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context="com.yixingjjinrong.yixinjinrongapp.wode.mycontent.ceping.CePingJieGuo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fdfdfe"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pcjg_fanhui"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="60px"
            android:text="评测结果"
            android:textColor="#363636"
            android:textSize="38px" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fdfdfe"
        android:layout_marginTop="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前风险评测等级为"
            android:textSize="26px"
            android:textColor="#999"
            android:layout_marginTop="102px"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/cp_jieguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="稳健型"
            android:textColor="#f36934"
            android:textSize="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            />

        <TextView
            android:id="@+id/cp_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="81px"
            android:lineSpacingExtra="14sp"
            android:text="根据测评结果您只能出借AAA、AA、A、BBB、BB、B级风险的借款项目。如果您认为测评结果与实际不符，请重新评测。"
            android:textColor="#333"
            android:textSize="28px" />
        <Button
            android:id="@+id/bt_cp_age"
            android:layout_width="470px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bt_shape"
            android:text="重新评测"
            android:layout_marginTop="110px"
            android:textColor="#fff"
            />

    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
