<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yixingjjinrong.yixinjinrongapp.wode.contractResult.Contract_OK">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qy_sucess_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:paddingRight="20px"
            android:layout_marginLeft="20px"
            android:paddingTop="20px"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="签约成功"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chenggong"
        android:layout_gravity="center"
        android:layout_marginTop="189px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="28px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 恭喜您签约成功！"
            android:textColor="#333"
            android:textSize="44px"

            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_recharge"
        android:layout_width="490px"
        android:layout_height="90px"
        android:background="@drawable/bt_shape"
        android:text="继续充值"
        android:layout_marginTop="110px"

        android:layout_gravity="center"
        android:textColor="#fdfdfe" />
    <Button
        android:id="@+id/bt_accountcenter"
        android:layout_width="490px"
        android:layout_height="90px"
        android:background="@drawable/bt_biankuang"
        android:text="账户中心"
        android:layout_marginTop="36px"
        android:layout_gravity="center"
        android:textColor="#ef6623" />
</com.zhy.autolayout.AutoLinearLayout>
