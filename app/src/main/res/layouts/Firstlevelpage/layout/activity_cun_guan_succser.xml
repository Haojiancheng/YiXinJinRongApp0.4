<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yixingjjinrong.yixinjinrongapp.wode.yinghancunguan_jieguo.CunGuan_succser">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kaitongok_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:paddingRight="20px"
            android:layout_marginLeft="20px"
            android:paddingTop="20px"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="开通成功"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chenggong"
        android:layout_gravity="center"
        android:layout_marginTop="189px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="44px"
        android:text="开通成功"
        android:layout_gravity="center"
        android:layout_marginTop="27px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60px"
            android:layout_marginStart="60px"
            android:lineSpacingExtra="10sp"
            android:text="尊敬的用户,您好!恭喜您成功开通存管账户,特赠送您199元红包,助力您的财富之旅,可前往'我的账户'-'优惠券'中查看.先安全再投资,就在亿信宝."
            android:textColor="#f6631a"
            android:textSize="30px" />


    </LinearLayout>

    <Button
        android:id="@+id/kt_ok_myconten"
        android:layout_width="490px"
        android:layout_height="90px"
        android:background="@drawable/bt_shape"
        android:text="账户中心"
        android:layout_marginTop="90px"

        android:layout_gravity="center"
        android:textColor="#fdfdfe" />
    <Button
        android:id="@+id/kt_ok_reback"
        android:layout_width="490px"
        android:layout_height="90px"
        android:background="@drawable/bt_biankuang"
        android:text="返回"
        android:layout_marginTop="36px"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="#ef6623" />
</com.zhy.autolayout.AutoLinearLayout>
