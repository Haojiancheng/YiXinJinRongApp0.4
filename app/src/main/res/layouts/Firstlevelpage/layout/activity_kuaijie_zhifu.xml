<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context=".wode.chongzhi.KUaiJieZhiFu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingTop="20px"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="开通快捷支付"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="开通快捷支付需要在第三方存管通道（富友）进行银行卡快速支付签约"
        android:textSize="28px"
        android:textColor="#666666"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="30px"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行预留手机号"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:textColor="#666666"
            android:textSize="28px"
            />
        <EditText
            android:id="@+id/qy_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@null"
            android:layout_marginLeft="30px"
            android:hint="请输入存管银行卡预留手机号 "
            android:textSize="30px"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/jinggao"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入正确的11位手机号码"
                android:textSize="24px"
                android:textColor="#ff5757"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/zclb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30px"
            android:text="支持银行列表"
            android:textColor="#078dcf"
            android:textSize="24px" />
    </RelativeLayout>
    <Button
        android:id="@+id/bt_sqqy"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_marginTop="100px"
        android:background="@drawable/bt_shape"
        android:layout_gravity="center"
        android:text="申请签约"
        android:textColor="#fdfdfe" />

</com.zhy.autolayout.AutoLinearLayout>