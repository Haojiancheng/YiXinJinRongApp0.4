<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.fore_inot.chujie_fragment.ChuJieXiangXing.Wo_HuikuanJIHua">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wo_hk_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:src="@drawable/fanhui"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:layout_marginLeft="20px"
            />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="回款计划"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>
    <com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.Xiangmuxiangqing.xiangqing.myview.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/huikuanjihuaScrollView"
        android:layout_marginTop="20px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fdfdfe"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="期次"
                    android:gravity="center"
                    android:textSize="24px"
                    android:textColor="#999999"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="回款本金（元）"
                    android:gravity="center_vertical"
                    android:textSize="24px"
                    android:textColor="#999999"
                    />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="回款利息（元）"
                    android:textColor="#999999"
                    android:textSize="24px" />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="计划回款日期"
                    android:gravity="center_vertical"
                    android:textSize="24px"
                    android:textColor="#999999"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e1e8f1"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/Wo_hkjh_rview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.Xiangmuxiangqing.xiangqing.myview.MyScrollView>

</com.zhy.autolayout.AutoLinearLayout>