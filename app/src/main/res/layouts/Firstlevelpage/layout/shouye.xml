<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shouye_frament"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="#f0f0f0">

    <com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.Xiangmuxiangqing.xiangqing.myview.MyScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/shouyetobbanner"
                android:layout_width="match_parent"
                android:layout_height="388px">

            </com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:background="#fdfdfe"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingBottom="26px"
                    android:paddingLeft="30px"
                    android:paddingTop="26px"
                    android:src="@drawable/gonggao" />

                <com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.shouye.myView.NoticeView
                    android:id="@+id/notice_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9" />

                <com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.shouye.myView.NoticeView
                    android:id="@+id/noticeTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:paddingLeft="20px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="288px"
                android:background="#fdfdfe">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="30px"
                        android:layout_weight="1.5"
                        android:src="@drawable/anquanbaozhang" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="资金安全保障"
                        android:textColor="#333333"
                        android:textSize="24px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="30px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="银行资金存管 "
                        android:textColor="#999999"
                        android:textSize="22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="30px"
                        android:layout_weight="1.5"
                        android:src="@drawable/xinxianquan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="信息安全保障"
                        android:textColor="#333333"
                        android:textSize="24px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="30px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="完成等保三级备案"
                        android:textColor="#999999"
                        android:textSize="22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="30px"
                        android:layout_weight="1.5"
                        android:src="@drawable/youzhixiangmu" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="优质资产项目"
                        android:textColor="#333333"
                        android:textSize="24px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="30px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="低风险抵押类资产"
                        android:textColor="#999999"
                        android:textSize="22px" />

                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mylist"
                android:layout_width="match_parent"
                android:layout_height="1100px"
                android:layout_marginTop="30px"
                android:divider="#00000000"
                android:dividerHeight="20px">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gengduoxiangmu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="查看更多项目 > >"
                    android:textColor="#999999"
                    android:textSize="26px" />
            </LinearLayout>

        </LinearLayout>
    </com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.Xiangmuxiangqing.xiangqing.myview.MyScrollView>


</com.zhy.autolayout.AutoRelativeLayout>