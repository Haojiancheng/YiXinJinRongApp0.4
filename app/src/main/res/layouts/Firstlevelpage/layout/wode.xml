<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:id="@+id/v1"
    android:orientation="vertical">

    <include
        android:id="@+id/weidengru"
        layout="@layout/weidengru" />

    <include
        android:id="@+id/dengru_chenggong"
        layout="@layout/dengru"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#fdfdfe"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:text="可用余额（元）"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/keyongyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="— —"
                android:textColor="#f66234"
                android:textSize="34px" />
        </LinearLayout>

        <Button
            android:id="@+id/chongzhi"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="100px"
            android:layout_marginTop="35px"
            android:background="@drawable/bt_shape"
            android:text="充值"
            android:textColor="#fdfdfe" />

        <Button
            android:id="@+id/tixian"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="35px"
            android:background="@drawable/bt_biankuang"
            android:text="提现"
            android:textColor="#fc6623" />
    </LinearLayout>

    <include
        android:id="@+id/shiming_my"
        layout="@layout/shimingrenzheng_itme"
        android:visibility="gone"
        />

    <include
        android:id="@+id/yinhangcunguan_my"
        layout="@layout/yinghangcunguan_itme"
        android:visibility="gone" />

    <include
        android:id="@+id/fangxianpingce_my"
        layout="@layout/fengxianpingce_itme"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198px"
        android:background="#fdfdfe"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wode_chujie"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/chujie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="我的出借"
                android:textColor="#666666"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zjls"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/liushui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="资金流水"
                android:textColor="#666666"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/xianjing_juan"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/xianjinquan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="现金券"
                android:textColor="#666666"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jiaxi_juan"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/jiaxiquan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="加息劵"
                android:textColor="#666666"
                android:textSize="30px" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="324px"
        android:layout_marginTop="30px"
        android:background="#fdfdfe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/wo_yaoqing"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/e1"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/yaoqing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/e1"
                    android:text="我的邀请"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/yaoqing"
                    android:layout_marginRight="10px"
                    android:paddingLeft="22px"
                    android:text="已邀请"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/yaoqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/q1"
                    android:layout_marginRight="10px"
                    android:text="0"
                    android:textColor="#fe6623"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                     android:layout_toLeftOf="@+id/e21"
                    android:layout_marginRight="20px"
                    android:text="人"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/e21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20px"
                    android:text=">"

                    android:textColor="#999999"
                    android:textSize="26px" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/lijichujie"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/r1"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/xiangmu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/r1"
                    android:text="优质项目"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/r2"
                    android:text="立即出借"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20px"
                    android:text=">"
                    android:textColor="#999999"
                    android:textSize="26px" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/t1"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/kefu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/t1"
                    android:text="客服电话"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/bi1"
                    android:text="400-183-8818"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/bi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:text=">"
                    android:textColor="#999999"
                    android:textSize="26px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>