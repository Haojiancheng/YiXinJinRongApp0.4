<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".xiangmuyemian.faxian.faxianerji.xinxipilu.XinXiPiLu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_marginTop="40px"
        android:background="@drawable/mybackgrandcolor">

        <ImageView
            android:id="@+id/xxpl_fh"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="信息披露"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/xinxipilutab"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#fdfdfe"
        app:tabIndicatorColor="#fe6623"
        app:tabIndicatorHeight="4px"
        app:tabMode="scrollable"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:layout_scrollFlags="scroll"
        app:tabSelectedTextColor="#fe6623"
        app:tabTextColor="#1a1919">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/xinxipiluvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px">

    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>