<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2px"
    android:layout_marginLeft="2px"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="380px"
        android:layout_height="170px"
        android:layout_gravity="center_horizontal"
        android:background="#fdfdfe"
        android:orientation="horizontal"
        tools:ignore="PxUsage">
        <LinearLayout
            android:id="@+id/quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/quanxiaobeijing"
            android:layout_marginLeft="30px"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/quan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="manjian"
                android:textSize="15px"
                android:textColor="#fff"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/im_shiwu"
            android:layout_width="150px"
            android:layout_height="130px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/xiaomi"
            android:layout_marginBottom="20px"
            android:visibility="gone"
            tools:ignore="PxUsage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_shiwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42px"
                android:maxEms="6"
                android:maxLines="1"
                android:text="小米手环"
                android:textColor="#333333"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_money_shiwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="#fe6632"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亿金币"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>