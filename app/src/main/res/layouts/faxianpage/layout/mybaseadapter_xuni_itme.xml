<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e8e8ea"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jifenduihuantiaozhuan"
        android:layout_width="379px"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:background="#fdfdfe"
        android:gravity="center_horizontal"

        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/da_quan"
            android:layout_width="260px"
            android:layout_height="200px"
            android:orientation="vertical"
            android:background="@drawable/datuquanbeijing"
            android:gravity="center"
            android:layout_marginTop="20px"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/da_quan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="manjian"
                android:textColor="#fff"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_xuni"
            android:layout_width="260px"
            android:layout_height="200px"
            android:layout_marginTop="20px"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/xianjinquan"
            tools:ignore="PxUsage"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_xuni_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:maxEms="6"
            android:maxLines="1"
            android:text="现金劵"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_xuni_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="#fe6632"
                android:textSize="30px"
                tools:ignore="PxUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亿金币"
                android:textColor="#999999"
                android:textSize="30px"
                tools:ignore="PxUsage" />
        </LinearLayout>

    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>