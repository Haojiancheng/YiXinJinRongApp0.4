<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="194px"
    android:orientation="vertical"
    android:background="#fdfdfe"
    android:layout_marginTop="20px"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人:"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginLeft="70px"
            android:layout_marginTop="30px"
            />
        <TextView
            android:id="@+id/dh_sh_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王迪"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            />
        <TextView
            android:id="@+id/dh_sh_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="157895562125"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dizhi"
            android:layout_marginLeft="30px"
            android:layout_marginTop="2px"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20px"
            >

            <TextView
                android:id="@+id/dh_sh_adassse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="12px"
                android:textSize="28px"
                android:textColor="#333333"
                android:text="收货地址：北京市朝阳区金僧接到喜达屋网库地下8好铺" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jinru"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                />
        </LinearLayout>
    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>