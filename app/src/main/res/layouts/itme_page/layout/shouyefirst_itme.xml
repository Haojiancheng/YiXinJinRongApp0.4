<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fbfcfd"
    >

    <LinearLayout
        android:id="@+id/view_first"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_src"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/fangchandiya" />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:text="车辆抵押  X18D10193"
            android:textColor="#333333"
            android:textSize="32px" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#adadad" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.0"
                android:textColor="#fe6623"
                android:textSize="100px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#fe6623"
                android:textSize="54px"

                />

            <TextView
                android:id="@+id/first_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#fe6623"
                android:textSize="54px" />

            <TextView
                android:id="@+id/first_fujialv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textColor="#fe6623"
                android:textSize="78px" />

            <TextView
                android:id="@+id/first_fujiabai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#fe6623"
                android:textSize="54px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:src="@drawable/qixian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="期限"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/first_qixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:text="12个月"
                android:textColor="#333333"
                android:textSize="34px" />

            <View
                android:layout_width="1px"
                android:layout_height="24px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28px"
                android:background="#adadad" />

            <ImageView
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:layout_marginLeft="28px"
                android:src="@drawable/shengyu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="剩余金额"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/first_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:text=""
                android:textColor="#333333"
                android:textSize="34px" />
        </LinearLayout>

        <Button
            android:id="@+id/first_chujie"
            android:layout_width="650px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:background="@drawable/bt_shape"
            android:text="立即出借"
            android:textColor="#ffffff"
            android:layout_marginBottom="20px"
            android:textSize="34px" />
    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>