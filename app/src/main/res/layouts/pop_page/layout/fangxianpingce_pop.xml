<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="530px"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:background="@drawable/bt_huisebiankuang"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193px"
            android:background="@drawable/mybackgrandcolor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fengxianceping" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="出借人风险评测"
                android:textColor="#ffffff"
                android:textSize="34px" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="193px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:layout_marginTop="50px"
            android:text="您还没有进行风险能力评测，根据监管要求，出借人需在出借前进行风险评测。" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"
            android:text="立即评测"
            android:textColor="#fe6623"
            android:textSize="34px" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:src="@drawable/guanbi" />
    

</com.zhy.autolayout.AutoRelativeLayout>