<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <ImageView
        android:id="@+id/smcg_cg_guanbil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40px"
        android:src="@drawable/guanbi1" />

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20px"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/guanbil"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:background="@drawable/mybackgrandcolor"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shiming" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:text="实名认证"
                    android:textColor="#ffffff"
                    android:textSize="34px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f9f6"
                android:gravity="center"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/chenggong"
                   android:layout_marginTop="40px"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证成功"
                    android:layout_marginTop="20px"
                    android:textColor="#fe6623"
                    android:textSize="34px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="48px"
                    android:lineSpacingExtra="12sp"
                    android:text="平台已接入恒丰银行资金存管系统，充值、提现、出借等资金操作均需开通银行存管账户，支持多家银行储蓄卡" />

                <Button
                    android:id="@+id/pop_cg_kt"
                    android:layout_width="540px"
                    android:layout_height="80px"
                    android:layout_marginTop="60px"
                    android:layout_marginBottom="50px"
                    android:background="@drawable/bt_shape"
                    android:text="开通存管"
                    android:textColor="#ffffff"
                    android:textSize="30px" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>