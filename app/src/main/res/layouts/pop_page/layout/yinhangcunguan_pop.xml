<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="530px"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_huisebiankuang"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193px"
            android:background="@drawable/mybackgrandcolor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yinhangcunguan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="开通银行存管"
                android:textColor="#ffffff"
                android:textSize="34px" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="193px"
    android:orientation="vertical"
    android:background="#ded0d0"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30px"
        android:layout_marginRight="20px"
        android:layout_marginTop="50px"

        android:text="平台已接入恒丰银行资金存管系统，充值、提现、出借等资金操作均需开通存管账户，支持多家银行储蓄卡。" />

</LinearLayout>
      
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <TextView
            android:id="@+id/ch_pop"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#ded0d0"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="#fe6623"
            android:textSize="34px" />
    </LinearLayout>
    
    
</com.zhy.autolayout.AutoLinearLayout>