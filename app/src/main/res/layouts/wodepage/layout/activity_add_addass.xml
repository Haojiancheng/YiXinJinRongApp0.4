<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.mycontent.addess.AddAddass">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tj_dz_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:src="@drawable/fanhui"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:layout_marginLeft="20px"
            />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="添加收货地址"
            android:textColor="#ffffff"
            android:textSize="38px" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="收货人"
            android:layout_marginLeft="30px"
            android:textColor="#333333"
            android:textSize="30px"
            />

        <EditText
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14px"
            android:background="@null"
            android:textColor="#333333"
            android:textSize="30px" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#adadad"
        android:layout_marginLeft="30px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="联系电话"
            android:layout_marginLeft="30px"
            android:textColor="#333333"
            android:textSize="30px"
            />
        <EditText
            android:id="@+id/add_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14px"
            android:textColor="#333333"
            android:background="@null"
            android:textSize="30px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#adadad"
        android:layout_marginLeft="30px"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:layout_marginBottom="37px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="所在区域"
            android:layout_marginTop="40px"
            android:textColor="#333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/add_addass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/xj3"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:text="请选择"
            android:textColor="#666666"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/xj3"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="45px"
            android:src="@drawable/xiao_jiantou" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#adadad"
        android:layout_marginLeft="30px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186px"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="详细地址"
            android:layout_marginLeft="30px"
            android:textColor="#333333"
            android:textSize="30px"
            />

        <EditText
            android:id="@+id/add_mainaddadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:layout_marginTop="36px"
            android:background="@null"
            android:hint="请输入详细地址信息，如道路、小区、楼栋号、单元室、门牌号等"
            android:textAlignment="textStart"
            android:textColor="#333333"
            android:textSize="30px" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#adadad"
        android:layout_marginLeft="30px"
        />
    <Button
        android:id="@+id/add_ok"
        android:layout_width="690px"
        android:layout_height="90px"
        android:background="@drawable/bt_shape"
        android:layout_marginTop="40px"
        android:text="保存"
        android:layout_gravity="center_horizontal"
        android:textColor="#fdfdfe" />


</com.zhy.autolayout.AutoLinearLayout>