<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.chongzhi.jieguo.ChongZhiSuccers">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cz_sucess_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:paddingRight="20px"
            android:layout_marginLeft="20px"
            android:paddingTop="20px"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="充值成功"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chenggong"
        android:layout_gravity="center"
        android:layout_marginTop="189px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="44px"
        android:text="充值成功"
        android:layout_gravity="center"
        android:layout_marginTop="27px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:textColor="#999"
            android:textSize="30px"

            />
        <TextView
            android:id="@+id/chongzhiok_jinge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:textSize="30px"
            android:text="54546"
            android:textColor="#ef6623"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="30px"
            android:layout_marginLeft="5px"
            android:text="元"
            />
    </LinearLayout>

    <Button
        android:id="@+id/bt_chujie"
        android:layout_width="490px"
        android:layout_height="90px"
        android:background="@drawable/bt_shape"
        android:text="立即出借"
        android:layout_marginTop="90px"

        android:layout_gravity="center"
        android:textColor="#fdfdfe" />
    <Button
        android:id="@+id/bt_chong_agen"
        android:layout_width="490px"
        android:layout_height="90px"
        android:background="@drawable/bt_biankuang"
        android:text="继续充值"
        android:layout_marginTop="36px"
        android:layout_gravity="center"
        android:textColor="#ef6623" />

</com.zhy.autolayout.AutoLinearLayout>