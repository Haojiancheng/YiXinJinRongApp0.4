<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context=".wode.mycontent.My_Content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_marginTop="40px"
        android:background="#fdfdfe"
        >

        <ImageView
            android:id="@+id/mycontentfanhui"
            android:layout_width="38px"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:src="@drawable/da_jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="#333"
            android:textSize="38px" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfe"
        android:orientation="vertical"
        android:layout_marginTop="40px"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="头像"
                android:layout_marginTop="56px"
                android:textColor="#333"
                android:textSize="30px" />



            <ImageView
                android:id="@+id/xj15"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="31dp"
                android:layout_marginTop="25px"
                android:src="@drawable/touxiang1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#dadada" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="手机号"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/myphone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="126****2365"
                android:textColor="#999999"
                android:textSize="30px" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#dadada" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="实名认证"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/shiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/xj3"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="立即认证"
                android:textColor="#fe6623"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xj3"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#dadada" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="收货地址"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />



            <ImageView
                android:id="@+id/xj31"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfe"
        android:orientation="vertical"
        android:layout_marginTop="40px"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="银行存管"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/cunguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/xj30"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="立即开通"
                android:textColor="#fe6623"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xj30"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#dadada" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="风险测评"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/ceping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/xj301"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="立即测评"
                android:textColor="#fe6623"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xj301"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>