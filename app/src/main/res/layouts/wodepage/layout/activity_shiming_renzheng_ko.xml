<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.dengruzuce.ShiMingRenZhengKO">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mycontentfanhui"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="实名认证"
            android:textColor="#363636"
            android:textSize="38px" />
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="117px"
        android:src="@drawable/renzhengchenggong" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证成功"
        android:textSize="36px"
        android:textColor="#fe6623"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平台已接入存管银行资金管理系统，充值、提"
        android:textSize="26px"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现、出借等资金操作均需开通存管账户，支持"
        android:textSize="26px"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多家银行储蓄卡"
        android:textSize="26px"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8px"
        />
    <Button
        android:id="@+id/cunguan1"
        android:layout_width="570px"
        android:layout_height="90px"
        android:background="@drawable/bt_shape"
        android:text="立即开通"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="104px"
        android:textColor="#fdfdfe" />

</com.zhy.autolayout.AutoLinearLayout>