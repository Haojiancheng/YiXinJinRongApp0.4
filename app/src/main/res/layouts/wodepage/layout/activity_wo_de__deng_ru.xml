<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wode.dengruzuce.WoDe_DengRu">

    <LinearLayout
        android:id="@+id/beijinglogo"
        android:layout_width="match_parent"
        android:layout_height="520px"
        android:background="@drawable/beijing"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108px"
            android:layout_marginTop="40px"
            >

            <ImageView
                android:id="@+id/dengrufanhui"
                android:layout_width="38px"
                android:layout_height="38px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14px"
                android:src="@drawable/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登入"
                android:textColor="#ffffff"
                android:textSize="38px" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/beijinglogo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="700px"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dengru_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:background="@null"
                        android:drawableStart="@drawable/zhanghao"
                        android:drawablePadding="18px"
                        android:inputType="textMultiLine" />

                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/dengru_guanbi"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/guanbi"
                    
                    />
            </LinearLayout>
            
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:background="#737373" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/dengru_mima"
                    android:layout_width="700px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:background="@null"
                    android:drawablePadding="18px"
                    android:drawableStart="@drawable/mima"
                    android:inputType="textPassword"
                    app:errorTextAppearance="@style/ErrorAppearance" />
            </android.support.design.widget.TextInputLayout>

            <ToggleButton
                android:id="@+id/dr_togglePwd"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginRight="30px"
                android:background="@drawable/buxianshi"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:background="#737373" />
        <Button
            android:id="@+id/dengru_goin"
            android:layout_width="690px"
            android:layout_height="90px" 
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bt_shape"
            android:layout_marginTop="90px"
            android:text="登入"
            android:textSize="38px"
            android:textColor="#fdfdfc"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginBottom="10px"
            >
            <TextView
                android:id="@+id/zhaohuimima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:layout_marginLeft="64px"
            android:textSize="28px"
            android:textColor="#656565"
            />
            <TextView
                android:id="@+id/zhuce_dengrupage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费注册"
                android:layout_alignParentRight="true"
                android:textSize="28px"
                android:textColor="#ef6d30"
                android:layout_marginRight="64px"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20px"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@drawable/yinhanglogo"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="用户资金安全由恒丰银行提供保障"
            android:textColor="#999"
            android:textSize="24px"
            android:layout_marginLeft="16px"
            android:visibility="gone"
            />
        
    </LinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>