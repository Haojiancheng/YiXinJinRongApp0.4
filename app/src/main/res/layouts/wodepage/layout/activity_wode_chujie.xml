<?xml version="1.0" encoding="utf-8"?>
    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.fore_inot.WoDe_ChuJie">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/fanhui"
            android:paddingTop="20px"
            android:layout_marginLeft="20px"
            />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="我的出借"
            android:textColor="#ffffff"
            android:textSize="38px" />
        
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/chujie_tab"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#fdfdfe"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabIndicatorColor="#fe6623"
        app:tabIndicatorHeight="4px"
        app:tabMode="scrollable"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:layout_scrollFlags="scroll"
        app:tabSelectedTextColor="#fe6623"
        app:tabTextColor="#1a1919">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/chujie_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px">

    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>