<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context=".wode.shezhi.WoDe_SheZhi">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="#fdfdfe"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shezhi_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou"/>

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="设置"
            android:textColor="#363636"
            android:textSize="38px"  />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfe"
        android:orientation="vertical"
        android:layout_marginTop="40px"
        >
        <RelativeLayout
            android:id="@+id/repassword"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="登录密码"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/xj1"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="修改"
                android:textColor="#999999"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xj1"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#f3f3f3" />
        <RelativeLayout
            android:id="@+id/shoushi_bt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="手势密码"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/hand_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/xj2"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="未开启"
                android:textColor="#999999"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xj2"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#f3f3f3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="推送设置"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/xj3"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="已开启"
                android:textColor="#999999"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xj3"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfe"
        android:orientation="vertical"
        android:layout_marginTop="40px"
        >
        <RelativeLayout
            android:id="@+id/fankui"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="意见反馈"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />


            <ImageView

                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#f3f3f3" />
        <RelativeLayout
            android:id="@+id/hz_bt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:layout_marginBottom="37px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="清理缓存"
                android:layout_marginTop="40px"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/huancun"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="1.67M"
                android:textColor="#999999"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/huancun"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="45px"
                android:src="@drawable/xiao_jiantou" />
        </RelativeLayout>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="40px"
        android:background="#fbfcfd"
        >
        <Button
            android:id="@+id/user_tuichu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="安全退出"
            android:textSize="30px"
            android:textColor="#fe6623"
            android:background="@null"


            />
    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>