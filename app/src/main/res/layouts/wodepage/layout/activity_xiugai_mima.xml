<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.shezhi.XiuGaiMiMa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px">

        <ImageView
            android:id="@+id/re_fenhui"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingTop="60px"
            android:text="修改登录密码"
            android:textColor="#333"
            android:textSize="38px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="700px"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/old_mima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:background="@null"
                android:drawablePadding="18px"
                android:hint="请输入原密码"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="#737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null">

            <EditText
                android:id="@+id/new_mima"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:background="@null"
                android:drawablePadding="18px"

                android:hint="6-18位字母和数字组合"
                android:inputType="textPassword"
                app:errorTextAppearance="@style/ErrorAppearance" />
        </android.support.design.widget.TextInputLayout>

        <!--<ToggleButton-->
        <!--android:id="@+id/xiugai_togglePwd"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:background="@drawable/buxianshi"-->
        <!--android:padding="10dp"-->
        <!--android:textOff=""-->
        <!--android:textOn="" />-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ToggleButton
                android:id="@+id/xiugai_togglePwd"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:textOff=""
                android:textOn="" />

            <ImageView
                android:id="@+id/xgmm_yj_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/buxianshi"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xg_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30px"
            android:layout_marginTop="32px"
            android:text="忘记密码？"
            android:textColor="#666"
            android:textSize="30px" />
    </RelativeLayout>

    <Button
        android:id="@+id/re_password"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:background="@drawable/bt_shape"
        android:text="确认"
        android:textColor="#fdfdfc"
        android:textSize="38px" />

</com.zhy.autolayout.AutoLinearLayout>