<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.dengruzuce.YanZheng_PaGa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        >

        <ImageView
            android:id="@+id/zz_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou" />


        <TextView
            android:id="@+id/jiekuanxieyi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:layout_centerHorizontal="true"
            android:paddingTop="60px"
            android:text="亿信宝注册"
            android:textColor="#333"
            android:textSize="38px" />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dadada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证您的手机号并注册"
            android:textColor="#b8b8b8"
            android:textSize="24px" />

        <TextView
            android:id="@+id/huode_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:textColor="#333333"
            android:textSize="54px"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130px"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="300px"
                android:layout_height="wrap_content"

                >

                <EditText
                    android:id="@+id/edit_phonecode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:background="@null"
                    android:drawablePadding="18px"
                    android:hint="请输入验证码"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/yanz_guanbi"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="100px"
                android:src="@drawable/guanbi" />
        </LinearLayout>

        <Button
            android:id="@+id/huoqu_yanzhengma"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:background="@drawable/bt_shape"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="#737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null">

            <EditText
                android:id="@+id/user_mima"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:background="@null"
                android:drawablePadding="18px"

                android:hint="6-18位字母和数字组合"
                android:inputType="textPassword"
                app:errorTextAppearance="@style/ErrorAppearance" />
        </android.support.design.widget.TextInputLayout>

        <ToggleButton
            android:id="@+id/zc_togglePwd"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buxianshi"
            android:padding="10dp"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="#737373" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">

        <EditText
            android:id="@+id/yaoqingren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:drawablePadding="18px"
            android:hint="推荐人手机号/邀请码（选填）"
            android:inputType="textPassword"

            app:errorTextAppearance="@style/ErrorAppearance" />
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/yy_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30px"
            android:text="发送语音验证码" />

    </RelativeLayout>

    <Button
        android:id="@+id/yanzheng_zhuce"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="87px"
        android:background="@drawable/bt_shape"
        android:text="注册"
        android:textColor="#fdfdfc"
        android:textSize="38px" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yinhanglogo" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:text="用户资金安全由恒丰银行提供保障"
                android:textColor="#999"
                android:textSize="24px" />

        </LinearLayout>
    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>