<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.dengruzuce.YanZheng_PaGa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px">

        <ImageView
            android:id="@+id/zz_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou" />


        <TextView
            android:id="@+id/jiekuanxieyi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="251px"
            android:paddingTop="60px"
            android:text="亿信宝注册"
            android:textColor="#333"
            android:textSize="38px" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dadada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证您的手机号并注册"
            android:textColor="#b8b8b8"
            android:textSize="24px" />

        <TextView
            android:id="@+id/huode_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:textColor="#333333"
            android:textSize="54px"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="400px"
                android:layout_height="wrap_content"

                >

                <EditText
                    android:id="@+id/edit_phonecode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:background="@null"
                    android:drawablePadding="18px"
                    android:hint="请输入验证码"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/yanz_guanbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:src="@drawable/guanbi" />
        </LinearLayout>

        <Button
            android:id="@+id/huoqu_yanzhengma"
            android:layout_width="0px"
            android:layout_height="70px"
            android:layout_marginRight="30px"
            android:layout_weight="0.7"
            android:background="@drawable/bt_shape"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="20px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="#dadada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null">

            <EditText
                android:id="@+id/user_mima"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:background="@null"
                android:drawablePadding="18px"

                android:hint="6-18位字母和数字组合"
                android:inputType="textPassword"
                app:errorTextAppearance="@style/ErrorAppearance" />
        </android.support.design.widget.TextInputLayout>

        <!--<ToggleButton-->
        <!--android:id="@+id/zc_togglePwd"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:background="@drawable/buxianshi"-->
        <!--android:padding="10dp"-->
        <!--android:textOff=""-->
        <!--android:textOn="" />-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/zc_togglePwd"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30px"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:textOff=""
                android:textOn="" />

            <ImageView
                android:id="@+id/zc_yj_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/buxianshi"
                 />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="#dadada" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="40px">

        <EditText
            android:id="@+id/yaoqingren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:drawablePadding="18px"
            android:background="@null"
            android:hint="推荐人手机号/邀请码（选填）"
            app:errorTextAppearance="@style/ErrorAppearance" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="#dadada" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >

        <CheckBox
            android:id="@+id/zc_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="我已阅读并同意"
            android:button="@drawable/checkbox_style"
            android:paddingLeft="20px"
            android:textColor="#999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/zz_h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《注册协议》"
            android:textColor="#fe6623"
            android:textSize="28px" />
    </LinearLayout>

    <Button
        android:id="@+id/yanzheng_zhuce"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="87px"
        android:background="@drawable/bt_shape"
        android:text="注册"
        android:textColor="#fdfdfc"
        android:textSize="38px" />
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
    android:id="@+id/yy_yanzheng"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="30px"
        android:layout_marginTop="30px"
    android:text="发送语音验证码" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yinhanglogo"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:text="用户资金安全由恒丰银行提供保障"
                android:textColor="#999"
                android:textSize="24px"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>