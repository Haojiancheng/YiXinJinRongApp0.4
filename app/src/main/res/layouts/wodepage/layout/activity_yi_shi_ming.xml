<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.mycontent.shiming.YiShiMing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ysm_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:src="@drawable/jiantou"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:layout_marginLeft="20px"
            />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="实名认证"
            android:textColor="#333333"
            android:textSize="38px" />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yishiming"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="107px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你已实名认证"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:textColor="#ef6623"
        android:textSize="40px"
        />
    <LinearLayout
        android:layout_width="570px"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_biankuanghuise"
        android:layout_marginTop="60px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#dadada"
            android:text="真实姓名"
            android:layout_marginLeft="50px"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/rname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34px"
            android:textColor="#333"
            android:layout_marginLeft="26px"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="570px"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_biankuanghuise"
        android:layout_marginTop="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#dadada"
            android:text="身份证号"
            android:layout_marginLeft="50px"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/rcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34px"
            android:textColor="#333"
            android:layout_marginLeft="26px"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>