<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfe"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".wode.dengruzuce.ZhaoHuiMiMa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zh_fh"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="找回登入密码"
            android:textColor="#363636"
            android:textSize="38px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dadada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="83px"
        android:text="通过注册手机号找回密码"
        android:textColor="#333333"
        android:textSize="36px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="700px"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/myphonet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:drawablePadding="18px"
                android:hint="请输入手机号"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/zhaohui_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/guanbi" />
    </LinearLayout>

    <Button
        android:id="@+id/zhaohuimiam_xiayibu"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110px"
        android:background="@drawable/bt_shape"
        android:text="下一步"
        android:textColor="#fdfdfc"
        android:textSize="38px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/erjikefu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6px"
                android:text="客服电话"
                android:textColor="#666"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="440-183-8818"
                android:textColor="#fe6623"
                android:textSize="28px"

                />

        </LinearLayout>
    </RelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>