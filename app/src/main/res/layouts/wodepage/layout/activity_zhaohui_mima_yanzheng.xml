<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.dengruzuce.ZhaoHuiMiMaYanZheng">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px">

        <ImageView
            android:id="@+id/zhucefanhui"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="#fdfdfe"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回登入密码"
            android:textColor="#363636"
            android:textSize="38px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dadada" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="85px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在为15984670708找回登入密码"
            android:textColor="#333333"
            android:textSize="36px"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信校验码已发送至手机号"
            android:textSize="24px"
            android:textColor="#b8b8b8"
            />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130px"
        android:gravity="center"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            >

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:drawablePadding="18px"
                android:hint="短信验证码"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/guanbi"
                android:background="@null"
                />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bt_shape"
            android:layout_marginRight="30px"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="24px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#737373"
        android:layout_marginTop="10px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        >

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="设置新登入密码"
            android:inputType="textPassword"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:drawablePadding="18px"
            android:drawableEnd="@drawable/buxianshi"
            app:errorTextAppearance="@style/ErrorAppearance"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/zhaohuimiam_queding"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bt_shape"
        android:layout_marginTop="148px"
        android:text="确定"
        android:textSize="38px"
        android:textColor="#fdfdfc"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/erjikefu"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话"
                android:textColor="#666"
                android:textSize="24px"
                android:layout_marginLeft="6px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="440-183-8818"
                android:textColor="#fe6623"
                android:textSize="28px"

                />

        </LinearLayout>
    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>