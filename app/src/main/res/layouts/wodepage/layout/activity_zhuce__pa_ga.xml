<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfcfd"
    android:orientation="vertical"
    tools:context=".wode.dengruzuce.ZhuCe_PaGa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zhucefanhui"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:src="@drawable/jiantou"/>

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="亿信宝注册"
            android:textColor="#363636"
            android:textSize="38px"  />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dadada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:background="@null"
            
            >

            <EditText
                android:id="@+id/zucePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@null"
                android:drawablePadding="18px"
                android:drawableStart="@drawable/zhanghao"
                android:hint="请输入手机号"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/zhuce_qingchu"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginRight="40px"
    
            android:src="@drawable/guanbi" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"

        android:background="#737373" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="我已经阅读并同意"
            android:textColor="#999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/zz_h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《注册协议》"
            android:textColor="#fe6623"
            android:textSize="28px" />
    </LinearLayout>

    <Button
        android:id="@+id/zhuce_xiayibu"
        android:layout_width="690px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130px"
        android:background="@drawable/bt_shape"
        android:text="下一步"
        android:textColor="#fdfdfc"
        android:textSize="38px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号，" />

        <TextView
            android:id="@+id/zz_dr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登入"
            android:textColor="#fe6623"
            android:textSize="28px" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yinhanglogo" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:text="用户资金安全由恒丰银行提供保障"
                android:textColor="#999"
                android:textSize="24px" />

        </LinearLayout>

    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>