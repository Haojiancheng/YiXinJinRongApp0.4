<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.fore_inot.chujie_fragment.ChuJIeXiangQing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:background="@drawable/mybackgrandcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wo_cjxq_fh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:paddingTop="20px"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_marginLeft="251px"
            android:gravity="center_horizontal"
            android:paddingTop="60px"
            android:text="出借详情"
            android:textColor="#ffffff"
            android:textSize="38px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/out_img"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
             />

        <TextView
            android:id="@+id/out_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:text="北京某居民个人名下房产抵押资金周转XX-18D10193"
            android:textColor="#333333"
            android:textSize="30px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:background="#dadada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="出借金额"
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/out_money"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text=" 10,000.00"
            android:textColor="#333333"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="36px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="借款期限"
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/out_time"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text=" 3个月"
            android:textColor="#333333"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="约定年化利率"
            android:textColor="#999999"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/out_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1.2%"
                android:textColor="#333333"
                android:textSize="28px"
                />
            <TextView
                android:id="@+id/out_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#333333"
                android:textSize="28px"
                />

            <TextView
                android:id="@+id/out_fujia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.3%"
                android:textColor="#333333"
                android:textSize="28px"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        >
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="还款方式"
            android:textColor="#999999"
            android:textSize="28px"
            />
        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            >
            <TextView
                android:id="@+id/xq_huankuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 按月付息，到期还本"
                android:textSize="28px"
                android:textColor="#333333"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yiwen"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/xq_huankuan"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="已还期数/总期数"
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/out_qishu"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text=" 1/12"
            android:textColor="#333333"
            android:textSize="28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="到期时间"
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/out_timea"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text=" 2019-05-06"
            android:textColor="#333333"
            android:textSize="28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="相关计划"
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/out_huikuan"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="  回款计划"
            android:textColor="#078dcf"
            android:textSize="28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="相关协议"
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/out_jiekuan"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="《借款协议》"
            android:textColor="#078dcf"
            android:textSize="28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/out_tishibook"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="《网络借贷风险和禁止行为提示书》"
            android:textColor="#078dcf"
            android:textSize="28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/out_hefabook"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="《资金来源合法承诺书》"
            android:textColor="#078dcf"
            android:textSize="28px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/out_weituobook"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="《个人电子签章授权委托书》"
            android:textColor="#078dcf"
            android:textSize="28px" />
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>