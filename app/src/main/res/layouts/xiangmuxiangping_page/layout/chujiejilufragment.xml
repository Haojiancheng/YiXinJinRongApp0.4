<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    >
    <include
        android:id="@+id/cjjl_dengruchakan"
        layout="@layout/dengru_chakan"
        android:visibility="gone"
        />
    <com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.Xiangmuxiangqing.xiangqing.myview.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chujiejiluScrollView"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_marginTop="10px"
            >
            <LinearLayout
                android:id="@+id/h5e"
                android:layout_width="fill_parent"
                android:layout_height="96px"
                android:orientation="horizontal"
                android:background="#fdfdfe"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:text="出借人"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:textSize="24px"
                    android:textColor="#999999"
                    />


                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1.8"
                    android:layout_marginLeft="20px"
                    android:text="出借金额(元)"
                    android:textColor="#999999"
                    android:textSize="24px" />


                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50px"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:textAlignment="textEnd"
                    android:text="出借时间"
                    android:textColor="#999999"
                    android:textSize="24px"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e1e8f1"
                />
           <com.jcodecraeer.xrecyclerview.XRecyclerView
               android:id="@+id/chujejilu_rview"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >

           </com.jcodecraeer.xrecyclerview.XRecyclerView>
        </LinearLayout>
    </com.yixingjjinrong.yixinjinrongapp.xiangmuyemian.Xiangmuxiangqing.xiangqing.myview.MyScrollView>


</com.zhy.autolayout.AutoLinearLayout>